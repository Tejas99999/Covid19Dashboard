<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Covid19-DashBoard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
  <!-- Navbar content -->
  <a class="navbar-brand" href="#"><h1>COVID-19 TRACKER</h1></a>
</nav>

    <div class="row center top">
      <div class="col-lg-3  ">
        <div class="card text-white bg-warning mb-3 center " style="max-width: 18rem;">
      <div class="card-header"><h1>Total Cases</h1></div>
      <div class="card-body">
        <h3 class="card-title"><%= tdata.confirmed_cases %></h3>
        <h4></h4>

      </div>
    </div>

      </div>

      <div class="col-lg-3">
        <div class="card text-white bg-danger mb-3 center" style="max-width: 18rem;">
      <div class="card-header"><h1>Active Cases</h1></div>
      <div class="card-body">
        <h3 class="card-title"><%= tdata.active_cases %></h3>
        <h4></h4>
      </div>
    </div>

      </div>
      <div class="col-lg-3">
        <div class="card text-white bg-success mb-3 center" style="max-width: 18rem;">
      <div class="card-header"><h1>Recovered</h1></div>
      <div class="card-body">
        <h3 class="card-title"><%= tdata.recovered_cases %></h3>
        <h4></h4>
      </div>
      </div>

      </div>
      <div class="col-lg-3">
        <div class="card text-white bg-dark mb-3 center" style="max-width: 18rem;">
      <div class="card-header"><h1>Deaths</h1></div>
      <div class="card-body">
        <h3 class="card-title"><%= tdata.death_cases %></h3>
        <h4></h4>

      </div>
    </div>

      </div>
    </div>

<div class="table1">
  <table class="table table-dark ">
<thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">States</th>
    <th scope="col">Total</th>
    <th scope="col">Active</th>
    <th scope="col">Recovered</th>
    <th scope="col">Deceased</th>
  </tr>
</thead>
<tbody>

<% for(var i=0;i!=stdata.length;i++) { %>
  <tr>
    <th scope="row"><%= i+1 %></th>
    <td><%= stdata[i].state %></td>
    <td><%= stdata[i].confirmed %></td>
    <td><%= stdata[i].active %></td>
    <td><%= stdata[i].recovered %></td>
    <td><%= stdata[i].deaths %></td>
  </tr>
<% } %>

</tbody>
</table>
</div>




    <div class="container">
        <canvas id="myChart" width="800" height="400"></canvas>
        <canvas id="myChart1" width="800" height="400"></canvas>
        <canvas id="myChart2" width="800" height="400"></canvas>
        <div class="pie">
        <canvas id="doughnut-chart" width="800" height="450"></canvas>  
        </div>

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script src="script.js"></script>
  </body>
</html>
